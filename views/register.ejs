<% include partials/header_reg %>
<div class="wrap">
<br><h1 class="title">User Sign Up</h1>
<br><br>
<form action="/register"  method=POST>
  <div class="form-group">
    <input type="email" name="username" class="form-control" placeholder="Enter email" style="width:300" required>
  </div>
  <div class="form-group">
    <input type="password" name="password" id="password" class="form-control" placeholder="Password" style="width:300" 
    pattern="(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{8,}" required>
    <small id="pwordHelp" class="form-text text-muted">Password should contain minimum 8 characters.
        It must include one uppercase and one lowercase letter, one digit from 0-9 and one
        special character (!,#,@,&).
    </small>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<% if (typeof info == 'undefined') { %>
  <% } else { %>
  <p class="pwd-match-info"><%= info %></p>
  <% } %>
</div>

<% include partials/footer %>