<% include partials/header %>


<div class="container">
<br><h1 class="title">Edit Music</h1><br>

<form action="/music/<%= song._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

<h5>Title</h5>
<div class="form-group">
<input type="text" name="title" class="form-control" value="<%= song.title %>" required>
</div>

<h5>Genre</h5>
<div class="form-group">
<input type="text" name="genre" class="form-control" value="<%= song.genre %>" required>
</div>

<h5>Image</h5>
<div class="form-group">
<input type="file" accept="image/*" name="photo" class="form-control" value="<%= song.image %>">
</div>

<h5>Artist</h5>
<div class="form-group">
<input type="text" name="artist" class="form-control" value="<%= song.artist %>" required>
</div>

<h5>Album</h5>
<div class="form-group">
<input type="text" name="album" class="form-control" value="<%= song.album %>" required>
</div>

<h5>Price</h5>
<div class="form-group"> 
<input type="number" name="price" min="0.99" max="100.99" step="0.5" class="form-control" value="<%= song.price %>" required>
</div>


<div class="form-group">
<button type="Submit" class="btn btn-info">Save</button>
</div>

</form>

<a href="/">Cancel</a>


</div>
<% include partials/footer %>